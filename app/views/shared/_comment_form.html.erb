<form action="<%= comments_url %>" method="post" accept-charset="utf-8">
  <%= get_auth_token %>
  <label for="comment">Comment</label><input type="text" name="comment[body]" value="" id="comment">
  <input type="hidden" name="comment[commentable_id]" value="<%= id %>" id="comment[commentable_id]">
  <input type="hidden" name="comment[commentable_type]" value="<%= type %>" id="comment[commentable_type]">

  <p><input type="submit" value="Add Comment"></p>
</form>